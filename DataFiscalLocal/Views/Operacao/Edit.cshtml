@model DataFiscal.Models.Operacao

<h1>Edit</h1>

<h4>Operacao</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Codigo" />
            <input type="hidden" asp-for="Cfop.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-8">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea rows="5" cols="40" asp-for="Descricao" class="form-control" readonly></textarea>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Valida" class="control-label"></label>
                <select asp-for="Valida" class="form-control">
                    <option value="">Selecione</option>
                    <option value="0">Não Válida</option>
                    <option value="1">Válida</option>
                </select>
                <span asp-validation-for="Valida" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <input type="submit" value="Salvar" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
